#!/usr/bin/env bash
# Install nginx and configure /redirect_me for 301 redirection

# Update and install nginx
apt-get update -y
apt-get install nginx -y

# Create the "Hello World!" index page
echo "Hello World!" > /var/www/html/index.html

# Backup default config
cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Use sed to replace the server block with a custom configuration
# We'll overwrite the default config to include the redirect

cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOF

# Restart nginx using service (not systemctl)
service nginx restart
