#!/usr/bin/env bash
# Configure UFW firewall to block all incoming traffic except ports 22, 80, and 443

# Update package list and install ufw if not installed
sudo apt-get update
sudo apt-get install -y ufw

# Set default policies
sudo ufw default deny incoming
sudo ufw default allow outgoing

# Allow SSH, HTTP, and HTTPS TCP ports
sudo ufw allow 22/tcp
sudo ufw allow 80/tcp
sudo ufw allow 443/tcp

# Enable UFW and automatically say "yes" to prompt
echo "y" | sudo ufw enable

# Show verbose status to verify
sudo ufw status verbose
